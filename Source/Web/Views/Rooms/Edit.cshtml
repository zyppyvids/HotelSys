<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Free" class="control-label"></label>
                <input asp-for="Free" class="form-control" />
                <span asp-validation-for="Free" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BedPriceAdult" class="control-label"></label>
                <input asp-for="BedPriceAdult" class="form-control" />
                <span asp-validation-for="BedPriceAdult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BedPriceChild" class="control-label"></label>
                <input asp-for="BedPriceChild" class="form-control" />
                <span asp-validation-for="BedPriceChild" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">TO INDEX...</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
